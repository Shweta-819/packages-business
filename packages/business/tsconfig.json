{
	"include": [
		"src/**/*",
		"rollup.config.js",
		".eslintrc.js",
		"webpack.config.js",
		"postcss.config.js",
		".stylelintrc.js",
    ],
	"exclude": ["dist"],
	"compilerOptions": {
		"target": "ES2020",
		"typeRoots": ["node_modules/@types"],
		// "lib": [],
		"jsx": "react",
		"module": "ES2020",
		"moduleResolution": "Node16",
		// "sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true
    }
}
